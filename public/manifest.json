{
    "manifest_version": 3,
    "name": "New Tab Start Page",
    "version": "1.0.0",
    "description": "A beautiful, customizable start page for Chrome.",
    "permissions": [
        "storage",
        "geolocation"
    ],
    "host_permissions": [
        "https://*.bing.com/",
        "https://api.open-meteo.com/"
    ],
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}